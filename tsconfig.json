{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "typeRoots": [
      "node_modules/@types",
      "node_module/phaser/types"
    ],
    "types": [
      "phaser"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*"
  ]
}
